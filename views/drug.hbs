                      <path d="M4.085 1H3.5A1.5 1.5 0 0 0 2 2.5v12A1.5 1.5 0 0 0 3.5 16h9a1.5 1.5 0 0 0 1.5-1.5v-12A1.5 1.5 0 0 0 12.5 1h-.585q.084.236.085.5V2a1.5 1.5 0 0 1-1.5 1.5h-5A1.5 1.5 0 0 1 4 2v-.5q.001-.264.085-.5M9.98 5.356 11.372 10h.128a.5.5 0 0 1 0 1H11a.5.5 0 0 1-.479-.356l-.94-3.135-1.092 5.096a.5.5 0 0 1-.968.039L6.383 8.85l-.936 1.873A.5.5 0 0 1 5 11h-.5a.5.5 0 0 1 0-1h.191l1.362-2.724a.5.5 0 0 1 .926.08l.94 3.135 1.092-5.096a.5.5 0 0 1 .968-.039Z"/>
                    </svg>
                  </a>
                  <a href="/patent?name={{brandName}}" class="btn btn-warning btn-sm">
                    View Patents
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-award" viewBox="0 0 16 16">
                      <path d="M9.669.864 8 0 6.331.864 5.803 2.633 3.978 3.197l-1.12 1.89.857 1.986-.857 1.987 1.12 1.89 1.825.564.528 1.77L8 16l1.669-.864.528-1.77 1.825-.564 1.12-1.89-.857-1.987.857-1.986-1.12-1.89-1.825-.564-.528-1.77zM8 1.288l1.066.553.356 1.19 1.286.398.77 1.3-.589 1.364.589 1.364-.77 1.3-1.286.398-.356 1.19L8 14.712l-1.066-.553-.356-1.19-1.286-.398-.77-1.3.589-1.364-.589-1.364.77-1.3 1.286-.398.356-1.19L8 1.288z"/>
                      <path d="M8 4.5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7zM5.5 8a2.5 2.5 0 1 1 5 0 2.5 2.5 0 0 1-5 0z"/>
                    </svg>
                  </a>
                </div>
                
                <p class="mb-1"><strong>Mechanism:</strong> {{moa}}</p>
                <p class="mb-1"><strong>Indications:</strong> {{indications}}</p>
                <div class="mt-2">
                  {{#if pubchem.error}}
                    <p class="text-danger">{{pubchem.error}}</p>
                  {{else}}
                    <p class="card-text mb-1"><strong>Medicinal Chemistry Data:</strong></p>
                    <ul class="list-group list-group-flush mb-2" id="medChemList">
                      <li class="list-group-item"><strong>Molecular Weight:</strong> {{pubchem.molecularWeight}}</li>
                      <li class="list-group-item"><strong>Log P:</strong> {{pubchem.logP}}</li>
                      <li class="list-group-item"><strong>Hydrogen Bond Donors:</strong> {{pubchem.hydrogenBondDonors}}</li>
                      <li class="list-group-item"><strong>Hydrogen Bond Acceptors:</strong> {{pubchem.hydrogenBondAcceptors}}</li>
                      <li class="list-group-item"><strong>Rotatable Bonds:</strong> {{pubchem.rotatableBonds}}</li>
                    </ul>
                    {{#if pubchem.imageUrl}}
                      <div class="text-center mb-2">
                        <img src="{{pubchem.imageUrl}}" alt="Molecular structure of {{genericName}}" style="max-width: 120px; cursor: zoom-in;" class="mol-img" data-img="{{pubchem.imageUrl}}">
                      </div>
                      <div id="molModal" class="modal" tabindex="-1" style="display:none; position:fixed; z-index:9999; left:0; top:0; width:100vw; height:100vh; background:rgba(0,0,0,0.7); align-items:center; justify-content:center;">
                        <span id="molModalClose" style="position:absolute;top:30px;right:50px;font-size:2.5rem;color:#fff;cursor:pointer;">&times;</span>
                        <img id="molModalImg" src="" style="max-width:90vw;max-height:90vh;box-shadow:0 2px 16px #222;border-radius:8px;">
                      </div>
                    {{else}}
                      <p class="text-muted">No molecular structure image available</p>
                    {{/if}}
                  {{/if}}
                </div>
                
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="alert alert-warning" role="alert">No drugs found for "{{searchTerm}}"</div>
    {{/if}}
    <a href="/" class="btn btn-secondary mt-3">Back to Search</a>
  </div>
</div>

{{#if pageCount}}
  <nav aria-label="Drug results pages" class="mt-4">
    <ul class="pagination justify-content-center">
      {{#if (gt page 1)}}
        <li class="page-item">
          <a class="page-link"
             href="/drug{{#if drugName}}?name={{drugName}}{{#if manufacturer}}&manufacturer={{manufacturer}}{{/if}}&page={{decrement page}}{{else if manufacturer}}?manufacturer={{manufacturer}}&page={{decrement page}}{{else}}?page={{decrement page}}{{/if}}"
             aria-label="Previous">
            &laquo; Prev
          </a>
        </li>
      {{/if}}
      {{#each (pagination page pageCount)}}
        <li class="page-item {{#if (eq this ../page)}}active{{/if}}">
          <a class="page-link"
             href="/drug{{#if ../drugName}}?name={{../drugName}}{{#if ../manufacturer}}&manufacturer={{../manufacturer}}{{/if}}&page={{this}}{{else if ../manufacturer}}?manufacturer={{../manufacturer}}&page={{this}}{{else}}?page={{this}}{{/if}}">
            {{this}}
          </a>
        </li>
      {{/each}}
      {{#if (lt page pageCount)}}
        <li class="page-item">
          <a class="page-link"
             href="/drug{{#if drugName}}?name={{drugName}}{{#if manufacturer}}&manufacturer={{manufacturer}}{{/if}}&page={{increment page}}{{else if manufacturer}}?manufacturer={{manufacturer}}&page={{increment page}}{{else}}?page={{increment page}}{{/if}}"
             aria-label="Next">
            Next &raquo;
          </a>
        </li>
      {{/if}}
    </ul>
    <div class="text-center text-muted mt-2">Page {{page}} of {{pageCount}} ({{total}} results)</div>
  </nav>
{{/if}}



<script>
$(document).ready(function () {
  $('.btn-success[data-bs-toggle="modal"]').on('click', function () {
    const btn = $(this);
    const idx = btn.data('bs-target').replace('#pdfModal-', '');
    const labelLink = btn.closest('.drug').find('a.btn-link').attr('href') || btn.closest('.drug').find('a.btn-success').attr('href');
    const modalPreview = $('#modalPdfPreview-' + idx);

    if (modalPreview.children('iframe').length === 0 && labelLink) {
      modalPreview.find('.pdf-spinner').show();

      const iframe = document.createElement('iframe');
      iframe.src = labelLink;
      iframe.style.width = '100%';
      iframe.style.height = '100%';
      iframe.style.border = 'none';
      iframe.title = 'Label Preview';
      iframe.onload = function () {
        modalPreview.find('.pdf-spinner').hide();
      };

      modalPreview.append(iframe);

      // Failsafe: hide spinner after 10 seconds and show a message
      setTimeout(function() {
        if (modalPreview.find('.pdf-spinner').is(':visible')) {
          modalPreview.find('.pdf-spinner').hide();
          if (modalPreview.find('.alert-warning').length === 0) {
            modalPreview.append('<div class="alert alert-warning mt-2">Label preview may not be available. <a href="' + labelLink + '" target="_blank">Open in new tab</a></div>');
          }
        }
      }, 5000);
    } else {
      modalPreview.find('.pdf-spinner').hide();
    }
  });

  // Lazy load inline small preview on demand (optional: add a button to trigger)
  $('.drug').each(function (i, el) {
    const $drug = $(el);
    const previewDiv = $drug.find('#inlinePdfPreview-' + i);
    const labelLink = $drug.find('a.btn-success').attr('href') || $drug.find('a.btn-primary').attr('href');
    // Optionally, add a button to trigger inline preview
    // For now, you can uncomment below to show inline preview on card click:
    /*
    $drug.find('.card-title').on('click', function () {
      if (previewDiv.children('iframe').length === 0 && labelLink) {
        previewDiv.html('<iframe src="' + labelLink + '" style="width:100%;max-width:250px;height:120px;border:1px solid #ccc;border-radius:4px;" title="PDF Preview"></iframe>');
      }
    });
    */
  });

  $('.drug').each(function () {
    const $drugCard = $(this);

    try {
      const getFloat = (label) => {
        const item = $drugCard.find(`.list-group-item:contains("${label}")`).text();
        return parseFloat(item.split(':')[1]) || 0;
      };

      const getInt = (label) => {
        const item = $drugCard.find(`.list-group-item:contains("${label}")`).text();
        return parseInt(item.split(':')[1]) || 0;
      };

      const mw  = getFloat("Molecular Weight");
      const logP = getFloat("Log P");
      const hbd = getInt("Hydrogen Bond Donors");
      const hba = getInt("Hydrogen Bond Acceptors");
      const rb  = getInt("Rotatable Bonds");

      const results = [];

      // Lipinski's Rule of 5
      if (mw <= 500 && logP <= 5 && hbd <= 5 && hba <= 10) {
        results.push(`
          <a href="https://en.wikipedia.org/wiki/Lipinski%27s_rule_of_five" target="_blank" class="badge bg-success me-1 text-decoration-none">
            <i class="bi bi-check-circle-fill me-1"></i>Lipinski
          </a>`);
      }

      // Veber Rule
      if (rb <= 10 && (hbd + hba) <= 12) {
        results.push(`
          <a href="https://www.wisdomlib.org/concept/vebers-rule" target="_blank" class="badge bg-info text-dark me-1 text-decoration-none">
            <i class="bi bi-check-circle-fill me-1"></i>Veber
          </a>`);
      }

      // Rule of 3
      if (mw <= 300 && logP <= 3 && hbd <= 3 && hba <= 3) {
        results.push(`
          <a href="https://www.mdpi.com/2673-8392/3/2/35" target="_blank" class="badge bg-warning text-dark me-1 text-decoration-none">
            <i class="bi bi-check-circle-fill me-1"></i>Rule of 3
          </a>`);
      }

      if (results.length > 0) {
        const badgeBlock = $(`<div class="mt-2">${results.join(' ')}</div>`);
        $drugCard.find('#medChemList').before(badgeBlock);
      }

    } catch (e) {
      console.warn("Error evaluating med chem rules:", e);
    }
  });

  // Molecular structure zoom
  document.querySelectorAll('.mol-img').forEach(function(img) {
    img.addEventListener('click', function() {
      var modal = document.getElementById('molModal');
      var modalImg = document.getElementById('molModalImg');
      modalImg.src = this.dataset.img;
      modal.style.display = 'flex';
    });
  });
  var modal = document.getElementById('molModal');
  if (modal) {
    document.getElementById('molModalClose').onclick = function() {
      modal.style.display = 'none';
      document.getElementById('molModalImg').src = '';
    };
    modal.onclick = function(e) {
      if (e.target === modal) {
        modal.style.display = 'none';
        document.getElementById('molModalImg').src = '';
      }
    };
  }
});
</script>

